  <!-- Som de celebração (usando Web Audio API) -->
  <script>
    // Função para criar som de celebração usando Web Audio API
    function createCelebrationSound() {
      const audioContext = new (window.AudioContext || window.webkitAudioContext)();
      
      // Som de sino/campainha
      function playBell() {
        const oscillator = audioContext.createOscillator();
        const gainNode = audioContext.createGain();
        
        oscillator.connect(gainNode);
        gainNode.connect(audioContext.destination);
        
        oscillator.frequency.setValueAtTime(800, audioContext.currentTime);
        oscillator.frequency.exponentialRampToValueAtTime(400, audioContext.currentTime + 0.5);
        
        gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
        gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 1);
        
        oscillator.start(audioContext.currentTime);
        oscillator.stop(audioContext.currentTime + 1);
      }
      
      // Tocar múltiplos sinos
      playBell();
      setTimeout(() => playBell(), 200);
      setTimeout(() => playBell(), 400);
      setTimeout(() => playBell(), 600);
    }

    // Criar partículas de glitter
    function createGlitterParticles() {
      const container = document.getElementById('glitterParticles');
      for (let i = 0; i < 30; i++) {
        const particle = document.createElement('div');
        particle.className = 'glitter-particle';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 8 + 's';
        particle.style.animationDuration = (Math.random() * 5 + 8) + 's';
        container.appendChild(particle);
      }
    }

    // Criar lantejolas
    function createSequins() {
      const container = document.getElementById('sequinsBg');
      for (let i = 0; i < 50; i++) {
        const sequin = document.createElement('div');
        sequin.className = 'sequin';
        sequin.style.left = Math.random() * 100 + '%';
        sequin.style.top = Math.random() * 100 + '%';
        sequin.style.animationDelay = Math.random() * 3 + 's';
        container.appendChild(sequin);
      }
    }

    // Entrar no site com efeitos
    document.getElementById('enterBtn').addEventListener('click', function() {
      // Tocar som de celebração
      try {
        createCelebrationSound();
      } catch(e) {
        console.log('Não foi possível reproduzir o áudio', e);
      }
      
      // Ativar holofotes rosa
      setTimeout(() => {
        document.getElementById('pinkSpotlightLeft').classList.add('active');
        document.getElementById('pinkSpotlightRight').classList.add('active');
      }, 500);
      
      // Criar chuva de pétalas rosa
      setTimeout(() => {
        createPetalRain();
      }, 700);
      
      // Animação de saída
      setTimeout(() => {
        document.getElementById('entranceScreen').classList.add('hidden');
        document.getElementById('mainContent').classList.add('visible');
      }, 1500);
    });

    // Criar chuva de pétalas rosa
    function createPetalRain() {
      const colors = ['#FFB6C1', '#FF69B4', '#FF1493', '#FFC0CB', '#FFE4E1'];
      
      for (let i = 0; i < 60; i++) {
        const petal = document.createElement('div');
        petal.style.position = 'fixed';
        petal.style.left = Math.random() * 100 + '%';
        petal.style.width = '10px';
        petal.style.height = '10px';
        petal.style.background = colors[Math.floor(Math.random() * colors.length)];
        petal.style.borderRadius = '50%';
        petal.style.zIndex = '999';
        petal.style.pointerEvents = 'none';
        petal.style.animation = `petal-fall ${Math.random() * 3 + 2}s linear forwards`;
        petal.style.animationDelay = Math.random() * 2 + 's';
        
        document.body.appendChild(petal);
        
        setTimeout(() => {
          petal.remove();
        }, 5000);
      }
    }

    // Adicionar animação de queda de pétalas ao CSS dinamicamente
    const style = document.createElement('style');
    style.textContent = `
      @keyframes petal-fall {
        0% {
          transform: translateY(-100vh) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translateY(100vh) rotate(720deg);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);

    // Tabs navigation
    document.querySelectorAll('.tab-button').forEach(button => {
      button.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');
        
        // Remover active de todos
        document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('active'));
        
        // Adicionar active ao clicado
        this.classList.add('active');
        document.getElementById(targetTab).classList.add('active');
      });
    });

    // Inicializar efeitos ao carregar
    window.addEventListener('load', function() {
      createGlitterParticles();
      createSequins();
      
      // Adicionar efeitos de brilho aleatórios
      setInterval(() => {
        if (Math.random() > 0.8) {
          createRandomSparkle();
        }
      }, 2000);
    });

    // Criar brilho aleatório
    function createRandomSparkle() {
      const sparkle = document.createElement('div');
      sparkle.style.position = 'fixed';
      sparkle.style.left = Math.random() * window.innerWidth + 'px';
      sparkle.style.top = Math.random() * window.innerHeight + 'px';
      sparkle.style.width = '20px';
      sparkle.style.height = '20px';
      sparkle.style.background = 'radial-gradient(circle, rgba(255,182,193,0.9) 0%, transparent 50%)';
      sparkle.style.borderRadius = '50%';
      sparkle.style.pointerEvents = 'none';
      sparkle.style.zIndex = '999';
      sparkle.style.opacity = '0';
      sparkle.style.transition = 'all 0.3s ease';
      sparkle.innerHTML = '✨';
      sparkle.style.fontSize = '20px';
      sparkle.style.display = 'flex';
      sparkle.style.alignItems = 'center';
      sparkle.style.justifyContent = 'center';
      
      document.body.appendChild(sparkle);
      
      setTimeout(() => {
        sparkle.style.opacity = '1';
        sparkle.style.transform = 'scale(2) rotate(360deg)';
      }, 10);
      
      setTimeout(() => {
        sparkle.remove();
      }, 1000);
    }
  </script>
</body>
</html>
